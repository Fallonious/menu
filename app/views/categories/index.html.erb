<p id="notice"><%= notice %></p>

<h1>Your Category Options Are:</h1>

<% @categories.each do |category| %>

  <h2><%= category.description %></h2>
  <%= link_to((image_tag category.image), items_path)%>

  <table>
    <th>Name</th>
    <th>Price</th>
    <th>Description</th>
    <% category.items.each do |item| %>
    <tr>
      <td class = "icount"><%= item.name %></td>
      <td class = "icount"><%= item.price %></td>
      <td class = "icount"><%= item.description %></td>
    </tr>
    <% end %>
  </table>


<% end %>


