<p id="notice"><%= notice %></p>

<h1>Your Item Options Are:</h1>
<%= link_to 'Add new item', new_item_path %>


<% @categories.each do |category| %>
  <h2><%= category.description %></h2>

  <table>

    <thead>
      <tr>
        <th class = "iheader">Name</th>
        <th class = "iheader">Price</th>
        <th class = "iheader">Description</th>
        <th class = "iheader">Category Id</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
    <% category.items.each do |item| %>

    <tr>
      <td class = "icount"><%= link_to item.name, edit_item_path(item) %></td>
      <td class = "icount"><%= item.price %></td>
      <td class = "icount"><%= item.description %></td>
      <td class = "icount"><%= item.category_id %></td>
      <td><%= link_to 'Show', item %></td>
      <td><%= link_to 'Edit', edit_item_path(item) %></td>
      <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
